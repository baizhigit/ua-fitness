{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/ua-fitness-app",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".vscode",
      ".git",
      ".gitignore",
      ".editorconfig",
      "src/**/.*",
      "angular.json",
      "database.rules.json",
      "browserslist",
      "karma.conf.js",
      "package.json",
      "package-lock.json",
      "README.md",
      "tsconfig.json",
      "tsconfig.app.json",
      "tsconfig.spec.json",
      "tslint.json",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
